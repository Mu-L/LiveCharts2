<Page
    x:Class="UnoPlatformSample.Presentation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoPlatformSample.Presentation"
    xmlns:uen="using:Uno.Extensions.Navigation.UI"
    xmlns:utu="using:Uno.Toolkit.UI"
    xmlns:um="using:Uno.Material"
    NavigationCacheMode="Required"
    Background="{ThemeResource BackgroundBrush}">

    <Grid
        RowDefinitions="Auto,*"
        utu:SafeArea.Insets="VisibleBounds">

        <utu:NavigationBar
            Content="LiveCharts demo" />

        <StackPanel
            Grid.Row="1">
            <TextBlock
                Text="Select a sample to run:"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="8" />
            <ComboBox
                ItemsSource="{Binding Samples}"
                SelectedValue="{Binding SelectedSample,Mode=TwoWay}"/>
        </StackPanel>

    </Grid>

</Page>
