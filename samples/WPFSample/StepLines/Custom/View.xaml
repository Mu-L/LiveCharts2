<UserControl
    x:Class="WPFSample.StepLines.Custom.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:vms="clr-namespace:ViewModelsSamples.StepLines.Custom;assembly=ViewModelsSamples"
    xmlns:draw="clr-namespace:LiveChartsCore.SkiaSharpView.Drawing.Geometries;assembly=LiveChartsCore.SkiaSharpView"
    xmlns:local="clr-namespace:WPFSample.StepLines.Custom">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart>
        <lvc:CartesianChart.Series>
            <lvc:SeriesCollection>
                <lvc:XamlStepLineSeries
                    Values="{Binding Values1}"
                    Fill="{x:Null}"
                    GeometrySize="20"/>
                <!--
                The StarStepLineSeries is a step line series that draws a star shape.
                -->
                <local:StarStepLineSeries
                    Values="{Binding Values2}"
                    Fill="{x:Null}"
                    GeometrySize="20"/>
                <!--
                You can also use SVG paths to draw the geometry
                the VariableSVGPathGeometry can change the drawn path at runtime
                -->
                <local:SvgStepLineSeries
                    GeometrySvg="{Binding PinPath}"
                    Values="{Binding Values3}"
                    Fill="{x:Null}"
                    GeometrySize="20"/>
                <!--
                Finally you can also use SkiaSharp to draw your own geometry
                -->
                <local:MyGeometryStepLineSeries
                    Values="{Binding Values4}"
                    Fill="{x:Null}"
                    GeometrySize="20"/>
            </lvc:SeriesCollection>
        </lvc:CartesianChart.Series>
    </lvc:CartesianChart>
</UserControl>
