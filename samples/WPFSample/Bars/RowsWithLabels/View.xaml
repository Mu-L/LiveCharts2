<UserControl
    x:Class="WPFSample.Bars.RowsWithLabels.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:vms="clr-namespace:ViewModelsSamples.Bars.RowsWithLabels;assembly=ViewModelsSamples">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart>
        <lvc:CartesianChart.Series>
            <lvc:SeriesCollection>
                <lvc:XamlRowSeries
                    Values="{Binding Values1}"
                    ShowDataLabels="True"
                    DataLabelsSize="14"
                    DataLabelsPosition="End"/>
                <lvc:XamlRowSeries
                    Values="{Binding Values2}"
                    ShowDataLabels="True"
                    DataLabelsSize="14"
                    DataLabelsPosition="Middle"/>
                <lvc:XamlRowSeries
                    Values="{Binding Values3}"
                    ShowDataLabels="True"
                    DataLabelsSize="14"
                    DataLabelsPosition="Start"/>
            </lvc:SeriesCollection>
        </lvc:CartesianChart.Series>
    </lvc:CartesianChart>

</UserControl>
