<UserControl
    x:Class="WPFSample.Lines.Properties.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:vms="clr-namespace:ViewModelsSamples.Lines.Properties;assembly=ViewModelsSamples"
    xmlns:local="clr-namespace:WPFSample.Lines.Properties">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <local:StringToPaintConverter x:Key="StringToPaintConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Command="{Binding ChangeValuesInstanceCommand}" Content="new values"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Command="{Binding NewFillCommand}" Content="fill"/>
            <Button Command="{Binding NewStrokeCommand}" Content="stroke"/>
            <Button Command="{Binding NewGeometryFillCommand}" Content="geo fill"/>
            <Button Command="{Binding NewGeometryStrokeCommand}" Content="geom stroke"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Command="{Binding IncreaseLineSmoothnessCommand}" Content="+ smooth"/>
            <Button Command="{Binding DecreaseLineSmoothnessCommand}" Content="- smooth"/>
            <Button Command="{Binding IncreaseGeometrySizeCommand}" Content="+ size"/>
            <Button Command="{Binding DecreaseGeometrySizeCommand}" Content="- size"/>
        </StackPanel>

        <lvc:CartesianChart Grid.Row="3">
            <lvc:CartesianChart.Series>
                <lvc:SeriesCollection>
                    <lvc:XamlLineSeries
                        Values="{Binding Values}"
                        Stroke="{Binding Stroke, Converter={StaticResource StringToPaintConverter}}"
                        Fill="{Binding Fill, Converter={StaticResource StringToPaintConverter}}"
                        GeometryStroke="{Binding GeometryStroke, Converter={StaticResource StringToPaintConverter}}"
                        GeometryFill="{Binding GeometryFill, Converter={StaticResource StringToPaintConverter}}"
                        LineSmoothness="{Binding Smoothness}"
                        GeometrySize="{Binding GeometrySize}"/>
                </lvc:SeriesCollection>
            </lvc:CartesianChart.Series>
        </lvc:CartesianChart>
    </Grid>

</UserControl>
