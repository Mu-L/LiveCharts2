<UserControl
    x:Class="WPFSample.General.Visibility.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:vms="clr-namespace:ViewModelsSamples.General.Visibility;assembly=ViewModelsSamples">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Margin="6" Command="{Binding Data[0].ToggleVisibilityCommand}" Content="toggle 1"/>
            <Button Margin="6" Command="{Binding Data[1].ToggleVisibilityCommand}" Content="toggle 2"/>
            <Button Margin="6" Command="{Binding Data[2].ToggleVisibilityCommand}" Content="toggle 3"/>
        </StackPanel>
        <lvc:CartesianChart Grid.Row="1" SeriesSource="{Binding Data}">
            <lvc:CartesianChart.SeriesTemplate>
                <DataTemplate>
                    <lvc:XamlColumnSeries
                        Values="{Binding Values}"
                        IsVisible="{Binding IsVisible}"/>
                </DataTemplate>
            </lvc:CartesianChart.SeriesTemplate>
        </lvc:CartesianChart>
    </Grid>

</UserControl>
