<UserControl
    x:Class="WPFSample.Pies.Icons.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:vms="clr-namespace:ViewModelsSamples.Pies.Icons;assembly=ViewModelsSamples"
    xmlns:local="clr-namespace:WPFSample.Pies.Icons">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:PieChart SeriesSource="{Binding Data}">
        <lvc:PieChart.SeriesTemplate>
            <DataTemplate>
                <local:CustomPieSeries
                    SeriesName="{Binding Name}"
                    Values="{Binding Values}"
                    IconName="{Binding Name}"
                    Icon="{Binding Icon}"
                    ShowDataLabels="True"/>
            </DataTemplate>
        </lvc:PieChart.SeriesTemplate>
    </lvc:PieChart>

</UserControl>
