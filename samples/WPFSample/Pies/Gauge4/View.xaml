<UserControl
    x:Class="WPFSample.Pies.Gauge4.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:vms="clr-namespace:ViewModelsSamples.Pies.Gauge4;assembly=ViewModelsSamples"
    MaxHeight="400"
    MaxWidth="400">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:PieChart
        InitialRotation="-90"
        MaxAngle="350"
        MinValue="0"
        MaxValue="100">
        <lvc:PieChart.Series>
            <lvc:SeriesCollection>

                <lvc:XamlGaugeSeries
                    GaugeValue="{Binding Vanesa}"
                    SeriesName="Vanessa"
                    DataLabelsSize="20"
                    DataLabelsPosition="End"
                    DataLabelsFormatter="{Binding Formatter}"
                    InnerRadius="20"
                    MaxRadialColumnWidth="5"/>

                <lvc:XamlGaugeSeries
                    GaugeValue="{Binding Charles}"
                    SeriesName="Charles"
                    DataLabelsSize="20"
                    DataLabelsPosition="End"
                    DataLabelsFormatter="{Binding Formatter}"
                    InnerRadius="20"
                    MaxRadialColumnWidth="5"/>

                <lvc:XamlGaugeSeries
                    GaugeValue="{Binding Ana}"
                    SeriesName="Ana"
                    DataLabelsSize="20"
                    DataLabelsPosition="End"
                    DataLabelsFormatter="{Binding Formatter}"
                    InnerRadius="20"
                    MaxRadialColumnWidth="5"/>

                <lvc:XamlGaugeBackgroundSeries Fill="{x:Null}"/>

            </lvc:SeriesCollection>
        </lvc:PieChart.Series>
    </lvc:PieChart>
</UserControl>
