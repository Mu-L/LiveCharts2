<UserControl
    x:Class="WPFSample.Pies.AutoUpdate.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:vms="clr-namespace:ViewModelsSamples.Pies.AutoUpdate;assembly=ViewModelsSamples">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Margin="6" Command="{Binding AddSeriesCommand}" Content="Add series"/>
            <Button Margin="6" Command="{Binding RemoveSeriesCommand}" Content="Remove series"/>
            <Button Margin="6" Command="{Binding UpdateAllCommand}" Content="Update Series"/>
        </StackPanel>

        <lvc:PieChart Grid.Row="1" SeriesSource="{Binding Data}">
            <lvc:PieChart.SeriesTemplate>
                <DataTemplate>
                    <lvc:XamlPieSeries
                        SeriesName="{Binding Name}"
                        Values="{Binding Values}"/>
                </DataTemplate>
            </lvc:PieChart.SeriesTemplate>
        </lvc:PieChart>
    </Grid>
</UserControl>
