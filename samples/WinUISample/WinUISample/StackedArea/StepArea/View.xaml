<UserControl
    x:Class="WinUISample.StackedArea.StepArea.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:vms="using:ViewModelsSamples.StackedArea.StepArea"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart>
        <lvc:CartesianChart.Series>
            <lvc:XamlStackedStepAreaSeries Values="{Binding Values1}"/>
            <lvc:XamlStackedStepAreaSeries Values="{Binding Values2}"/>
            <lvc:XamlStackedStepAreaSeries Values="{Binding Values3}"/>
        </lvc:CartesianChart.Series>
    </lvc:CartesianChart>

</UserControl>
