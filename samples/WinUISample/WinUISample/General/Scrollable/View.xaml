<UserControl
    x:Class="WinUISample.General.Scrollable.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:vms="using:ViewModelsSamples.General.Scrollable"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <lvc:LimitsConverter x:Key="AsNullable"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--
        We use the DrawMargin property to align both charts,
        both charts have a left margin of 100 and a right margin of 50
        -->

        <!--
        WinUI Notice:
        The XamlAxis Min and Max Limit properties are of type double,
        on the rest of the platforms we use nullable doubles,
        that is why we use a converter to convert the nullable double values to double.NaN,
        you could also modify the view model to use double.NaN directly.

        This also applies Xi and Xj properties of the RectangularSection.
        -->

        <lvc:CartesianChart
            Grid.Row="0"
            DrawMargin="{lvc:Margin Value='100, Auto, 50, Auto'}"
            ZoomMode="X"
            UpdateStartedCommand="{Binding ChartUpdatedCommand}">
            <lvc:CartesianChart.Series>
                <lvc:XamlLineSeries
                    Values="{Binding Values}"
                    GeometryStroke="{x:Null}"
                    GeometryFill="{x:Null}"
                    DataPadding="{lvc:Point Value='0,1'}"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.XAxes>
                <lvc:XamlAxis
                    MinLimit="{Binding MinX, Converter={StaticResource AsNullable}}"
                    MaxLimit="{Binding MaxX, Converter={StaticResource AsNullable}}" />
            </lvc:CartesianChart.XAxes>
        </lvc:CartesianChart>

        <lvc:CartesianChart
            Grid.Row="1"
            DrawMargin="{lvc:Margin Value='100, Auto, 50, Auto'}"
            PointerPressedCommand="{Binding PointerDownCommand}"
            PointerMoveCommand="{Binding PointerMoveCommand}"
            PointerReleasedCommand="{Binding PointerUpCommand}"
            TooltipPosition="Hidden">
            <lvc:CartesianChart.Series>
                <lvc:XamlLineSeries
                    Values="{Binding Values}"
                    GeometryStroke="{x:Null}"
                    GeometryFill="{x:Null}"
                    DataPadding="{lvc:Point Value='0,1'}"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.XAxes>
                <lvc:XamlAxis IsVisible="False"/>
            </lvc:CartesianChart.XAxes>
            <lvc:CartesianChart.YAxes>
                <lvc:XamlAxis IsVisible="False"/>
            </lvc:CartesianChart.YAxes>
            <lvc:CartesianChart.Sections>
                <lvc:XamlRectangularSection
                    Xi="{Binding MinXThumb, Converter={StaticResource AsNullable}}"
                    Xj="{Binding MaxXThumb, Converter={StaticResource AsNullable}}"
                    Fill="{lvc:SolidColorPaint Color='#64FFCDD2'}"/>
            </lvc:CartesianChart.Sections>
        </lvc:CartesianChart>
    </Grid>
</UserControl>
