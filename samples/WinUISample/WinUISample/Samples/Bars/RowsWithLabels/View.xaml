<UserControl
    x:Class="WinUISample.Bars.RowsWithLabels.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:vms="using:ViewModelsSamples.Bars.RowsWithLabels"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart>
        <lvc:CartesianChart.Series>
            <lvc:SeriesCollection>
                <lvc:XamlRowSeries
                    Values="{Binding Values1}"
                    ShowDataLabels="True"
                    DataLabelsSize="14"
                    DataLabelsPosition="End"/>
                <lvc:XamlRowSeries
                    Values="{Binding Values2}"
                    ShowDataLabels="True"
                    DataLabelsSize="14"
                    DataLabelsPosition="Middle"/>
                <lvc:XamlRowSeries
                    Values="{Binding Values3}"
                    ShowDataLabels="True"
                    DataLabelsSize="14"
                    DataLabelsPosition="Start"/>
            </lvc:SeriesCollection>
        </lvc:CartesianChart.Series>
    </lvc:CartesianChart>
</UserControl>
