<UserControl
    x:Class="AvaloniaSample.Heat.Basic.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.Heat.Basic"
    xmlns:draw="using:LiveChartsCore.SkiaSharpView.SKCharts">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart
        LegendPosition="Right">

        <lvc:CartesianChart.Series>
            <lvc:XamlHeatSeries
                Values="{Binding Values}"
                HeatMap="{lvc:ColorArray '#FFF176, #2F4F4F, #0000FF'}"/>
        </lvc:CartesianChart.Series>

        <lvc:CartesianChart.XAxes>
            <lvc:XamlAxis Labels="{Binding XLabels}"/>
        </lvc:CartesianChart.XAxes>

        <lvc:CartesianChart.YAxes>
            <lvc:XamlAxis Labels="{Binding YLabels}"/>
        </lvc:CartesianChart.YAxes>

        <lvc:CartesianChart.Legend>
            <draw:SKHeatLegend BadgePadding="{lvc:Padding '30, 20, 8, 20'}"/>
        </lvc:CartesianChart.Legend>

    </lvc:CartesianChart>
</UserControl>
