<UserControl
    x:Class="AvaloniaSample.Axes.MatchScale.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.Axes.MatchScale"
    x:DataType="vms:ViewModel">

  <UserControl.DataContext>
    <vms:ViewModel/>
  </UserControl.DataContext>

    <lvc:CartesianChart
          MatchAxesScreenDataRatio="True"
          DrawMarginFrame="{lvc:Frame Stroke={lvc:SolidColorPaint Color='#64b4b4b4', StrokeWidth=2}}"
          ZoomMode="Both"
          TooltipPosition="Hidden">

        <lvc:CartesianChart.Series>
            <lvc:XamlLineSeries
                Values="{Binding Values}"
                Stroke="{lvc:SolidColorPaint Color='#2196f3', StrokeWidth=4}"
                Fill="{x:Null}"
                GeometryStroke="{x:Null}"
                GeometryFill="{x:Null}"/>
        </lvc:CartesianChart.Series>

        <!--
            we are forcing the step to 0.1 to highlight that
            both axes take the same amount of pixels per unit of data,
            but in a real scenario the MinStep is not necessary
        -->

        <lvc:CartesianChart.XAxes>
            <lvc:XamlAxis
                AxisName="XAxis"
                SeparatorsPaint="{lvc:SolidColorPaint Color='#64b4b4b4'}"
                MinStep="0.1"
                ForceStepToMin="True"/>
        </lvc:CartesianChart.XAxes>

        <lvc:CartesianChart.YAxes>
            <lvc:XamlAxis
                AxisName="YAxis"
                SeparatorsPaint="{lvc:SolidColorPaint Color='#64b4b4b4'}"
                MinStep="0.1"
                ForceStepToMin="True"/>
        </lvc:CartesianChart.YAxes>

    </lvc:CartesianChart>
</UserControl>
