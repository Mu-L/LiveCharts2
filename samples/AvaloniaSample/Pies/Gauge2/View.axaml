<UserControl
    x:Class="AvaloniaSample.Pies.Gauge2.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.Pies.Gauge2"
    x:DataType="vms:ViewModel">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:PieChart
        InitialRotation="-225"
        MaxAngle="270"
        MinValue="0"
        MaxValue="100">

        <lvc:PieChart.Series>

            <lvc:XamlGaugeSeries
                GaugeValue="{Binding Value}"
                Fill="{lvc:SolidColorPaint Color='#9ACD32'}"
                ShowDataLabels="True"
                DataLabelsSize="50"
                DataLabelsPosition="ChartCenter"
                InnerRadius="75"/>

            <!-- The background series is used to style the gauge background. -->
            <lvc:XamlGaugeBackgroundSeries
                InnerRadius="75"
                Fill="{lvc:SolidColorPaint Color='#5A64B5F6'}"/>

        </lvc:PieChart.Series>

    </lvc:PieChart>
</UserControl>
