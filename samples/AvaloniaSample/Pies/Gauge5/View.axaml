<UserControl
    x:Class="AvaloniaSample.Pies.Gauge5.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.Pies.Gauge5"
    x:DataType="vms:ViewModel">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <Grid RowDefinitions="Auto, *">

        <Button
            Grid.Row="0"
            Command="{Binding DoRandomChangeCommand}"
            Content="Change Value"/>

        <lvc:PieChart
            Grid.Row="1"
            InitialRotation="-90"
            MinValue="0"
            MaxValue="100"
            MaxAngle="270"
            LegendPosition="Bottom">

            <lvc:PieChart.Series>

                <lvc:XamlGaugeSeries
                    SeriesName="North"
                    GaugeValue="{Binding Value1}"
                    DataLabelsPosition="Start"/>

                <lvc:XamlGaugeSeries
                    SeriesName="South"
                    GaugeValue="{Binding Value2}"
                    DataLabelsPosition="Start"/>

            </lvc:PieChart.Series>

        </lvc:PieChart>
    </Grid>
</UserControl>
