<UserControl x:Class="AvaloniaSample.StackedBars.Groups.View"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:vms="using:ViewModelsSamples.StackedBars.Groups">

  <UserControl.DataContext>
    <vms:ViewModel/>
  </UserControl.DataContext>

  <lvc:CartesianChart>

    <lvc:CartesianChart.Series>
      <lvc:XamlStackedColumnSeries Values="{Binding Values1}" StackGroup="0"/>
      <lvc:XamlStackedColumnSeries Values="{Binding Values2}" StackGroup="0"/>

      <lvc:XamlStackedColumnSeries Values="{Binding Values3}" StackGroup="1"/>
      <lvc:XamlStackedColumnSeries Values="{Binding Values4}" StackGroup="1"/>
    </lvc:CartesianChart.Series>

    <lvc:CartesianChart.XAxes>
      <lvc:XamlAxis
          LabelsRotation="-15"
          Labels="{Binding Labels}"
          MinStep="1"
          ForceStepToMin="True"/>
    </lvc:CartesianChart.XAxes>

  </lvc:CartesianChart>

</UserControl>
