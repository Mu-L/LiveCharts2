<UserControl
    x:Class="AvaloniaSample.StackedBars.Basic.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.StackedBars.Basic"
    x:DataType="vms:ViewModel">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart>
        <lvc:CartesianChart.Series>
            <lvc:XamlStackedColumnSeries
                Values="{Binding Values1}"
                ShowDataLabels="True"
                YToolTipLabelFormatter="{Binding Formatter}"/>
            <lvc:XamlStackedColumnSeries
                Values="{Binding Values2}"
                ShowDataLabels="True"
                YToolTipLabelFormatter="{Binding Formatter}"/>
            <lvc:XamlStackedColumnSeries
                Values="{Binding Values3}"
                ShowDataLabels="True"
                YToolTipLabelFormatter="{Binding Formatter}"/>
        </lvc:CartesianChart.Series>
    </lvc:CartesianChart>

</UserControl>
