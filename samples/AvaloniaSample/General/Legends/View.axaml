<UserControl
    x:Class="AvaloniaSample.General.Legends.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.General.Legends">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <Grid RowDefinitions="Auto, *">
        <ComboBox
            Grid.Row="0"
            ItemsSource="{Binding Positions}"
            SelectedItem="{Binding SelectedPosition}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <lvc:CartesianChart
            Grid.Row="1"
            LegendPosition="{Binding SelectedPosition}"
            SeriesSource="{Binding Data}">
            <lvc:CartesianChart.SeriesTemplate>
                <DataTemplate x:DataType="vms:ChartData">
                    <lvc:XamlColumnSeries SeriesName="{Binding Name}" Values="{Binding Values}"/>
                </DataTemplate>
            </lvc:CartesianChart.SeriesTemplate>
        </lvc:CartesianChart>
    </Grid>

</UserControl>
