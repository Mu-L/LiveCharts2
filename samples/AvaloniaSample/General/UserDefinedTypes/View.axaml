<UserControl
    x:Class="AvaloniaSample.General.UserDefinedTypes.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.General.UserDefinedTypes"
    x:DataType="vms:ViewModel">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart>
        <lvc:CartesianChart.Series>
            <lvc:XamlLineSeries
                x:TypeArguments="vms:City"
                SeriesName="Population"
                Values="{Binding Values}"
                YToolTipLabelFormatter="{Binding TooltipFormatter}"/>
        </lvc:CartesianChart.Series>
    </lvc:CartesianChart>

</UserControl>
