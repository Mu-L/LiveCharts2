<UserControl
    x:Class="AvaloniaSample.General.RealTime.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.General.RealTime"
    x:DataType="vms:ViewModel">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart
        SyncContext="{Binding Sync}">
        <lvc:CartesianChart.Series>
            <lvc:XamlLineSeries
                Values="{Binding Values}"
                Fill="{x:Null}"
                GeometryFill="{x:Null}"
                GeometryStroke="{x:Null}"/>
        </lvc:CartesianChart.Series>
        <lvc:CartesianChart.XAxes>
            <lvc:XamlDateTimeAxis
                Interval="0:0:1"
                DateFormatter="{Binding LabelsFormatter}"
                AnimationsSpeed="0"
                SeparatorsPaint="{lvc:SolidColorPaint Color='64B4B4B4'}"
                CustomSeparators="{Binding Separators}"/>
        </lvc:CartesianChart.XAxes>
    </lvc:CartesianChart>

</UserControl>
