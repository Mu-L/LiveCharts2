<UserControl
    x:Class="AvaloniaSample.General.MapPoints.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.General.MapPoints"
    x:DataType="vms:ViewModel">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart>
        <lvc:CartesianChart.Series>
            <lvc:XamlColumnSeries
                ShowDataLabels="True"
                DataLabelsPosition="Top"
                Values="{Binding Values}"
                PointMeasuredCommand="{Binding PointMeasuredCommand}"/>
        </lvc:CartesianChart.Series>
    </lvc:CartesianChart>

</UserControl>
