<UserControl
    x:Class="AvaloniaSample.General.Tooltips.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.General.Tooltips">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <Grid RowDefinitions="Auto, *">
        <ComboBox
            Grid.Row="0"
            ItemsSource="{Binding Positions}"
            SelectedItem="{Binding SelectedPosition}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <lvc:CartesianChart
            Grid.Row="1"
            TooltipPosition="{Binding SelectedPosition}">
            <lvc:CartesianChart.Series>
                <lvc:XamlColumnSeries
                    Values="{Binding Values1}"
                    SeriesName="Sales"/>
                <lvc:XamlLineSeries
                    Values="{Binding Values2}"
                    SeriesName="Customers"/>
            </lvc:CartesianChart.Series>
        </lvc:CartesianChart>
    </Grid>

</UserControl>
