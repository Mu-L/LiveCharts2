<UserControl
    x:Class="AvaloniaSample.StackedArea.StepArea.View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:vms="using:ViewModelsSamples.StackedArea.StepArea"
    x:DataType="vms:ViewModel">

    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>

    <lvc:CartesianChart>
        <lvc:CartesianChart.Series>
            <lvc:XamlStackedStepAreaSeries Values="{Binding Values1}"/>
            <lvc:XamlStackedStepAreaSeries Values="{Binding Values2}"/>
            <lvc:XamlStackedStepAreaSeries Values="{Binding Values3}"/>
        </lvc:CartesianChart.Series>
    </lvc:CartesianChart>

</UserControl>
